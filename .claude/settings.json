{
  "permissions": {
    "allow": [
      "WebFetch",
      "Bash(make test)",
      "Bash(make check)",
      "Bash(uv sync)",
      "Bash(git status)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git branch)",
      "Bash(find:*)",
      "Bash(cat:*)",
      "Bash(grep:*)",
      "Bash(mgrep:*)",
      "Bash(uv run pytest)",
      "Bash(uv run pytest:*)",
      "Bash(uv run ruff:*)",
      "Bash(uv run ty check:*)"
    ],
    "deny": [
      "Bash(uv publish)"
    ],
    "ask": [
      "Bash(make clean-docker)",
      "Bash(rm:*)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/permission-gates.py"
          }
        ]
      }
    ],
    "PermissionRequest": [
      {
        "matcher": "Bash|Read|Edit|Write|NotebookEdit|WebFetch|Skill",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/permission-reviewer.py",
            "timeout": 20
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/lint-file.sh",
            "timeout": 30000
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "cd \"$CLAUDE_PROJECT_DIR\" && make check",
            "timeout": 120000
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "clarify@team-attention-plugins": true,
    "dev@team-attention-plugins": true,
    "session-wrap@team-attention-plugins": true,
    "agent-council@team-attention-plugins": true,
    "mgrep@Mixedbread-Grep": true,
    "code-documentation@claude-code-workflows": true,
    "code-review-ai@claude-code-workflows": true,
    "database-design@claude-code-workflows": true,
    "debugging-toolkit@claude-code-workflows": true
  }
}
